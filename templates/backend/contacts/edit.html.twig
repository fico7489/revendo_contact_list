{% extends 'backend/base.html.twig' %}

{% block body %}
    <h5 class="card-title">Edit Contact</h5>

    <fieldset class="border p-2">
        <legend class="w-auto">Details</legend>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Save changes</button>
        {{ form_end(form) }}
    </fieldset>

    <hr/>

    <fieldset class="border p-2">
        <legend class="w-auto">Profile photo</legend>

        {{ form_start(formContactProfilePhoto, {action:path('backend.contacts.profilePhoto.create', {id : contact.getId })}) }}
        {{ form_widget(formContactProfilePhoto) }}

        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block">Upload New Photo</button>
        {{ form_end(formContactProfilePhoto) }}

        <hr/>

        <div>
            {% if contact.getContactProfilePhoto %}
                Current Profile Photo<img src="{{ app.request.getBaseURL() }}/uploads/contact-profile-photos/{{ contact.getContactProfilePhoto.getName }}" style="width: 100px;"/>
            {% else %}
                Profile photo does not exists
            {% endif %}
        </div>
    </fieldset>

    <hr/>

    <fieldset class="border p-2">
        <legend class="w-auto">Contact phones</legend>

        {{ form_start(formContactPhones, {action:path('backend.contacts.phone.create', {id : contact.getId })}) }}

        <ul class="contactPhones"
            data-index="{{ formContactPhones.contactPhones|length > 0 ? formContactPhones.contactPhones|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(formContactPhones.contactPhones.vars.prototype)|e('html_attr') }}"
        >
            {% for contactPhone in formContactPhones.contactPhones %}
                <li>
                    {{ form_row(contactPhone.label) }}
                    {{ form_row(contactPhone.phone) }}
                </li>
            {% endfor %}
        </ul>

        <hr/>

        <div style="padding-left: 2rem; margin-bottom: 1rem;">
            <button type="button" class="add_item_link btn btn-primary btn-block" data-collection-holder-class="contactPhones">Add a phone</button>
        </div>

        <hr/>

        <div style="padding-left: 2rem; margin-bottom: 1rem;">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>

        {{ form_end(formContactPhones) }}
    </fieldset>

    <script>
        const addFormToCollection = (e) => {
            const collectionHolder = document.querySelector('.' + e.currentTarget.dataset.collectionHolderClass);
            console.log(collectionHolder);

            const item = document.createElement('li');

            item.innerHTML = collectionHolder
                .dataset
                .prototype
                .replace(
                    /__name__/g,
                    collectionHolder.dataset.index
                );

            collectionHolder.appendChild(item);

            collectionHolder.dataset.index++;
        };

        document
            .querySelectorAll('.add_item_link')
            .forEach(btn => {
                btn.addEventListener("click", addFormToCollection)
            });
    </script>

    <script>
        const addContactPhoneFormDeleteLink = (item) => {
            const removeFormButton = document.createElement('button');
            removeFormButton.className = 'btn btn-primary btn-block';
            removeFormButton.innerText = 'Delete this phone';

            item.append(removeFormButton);

            removeFormButton.addEventListener('click', (e) => {
                e.preventDefault();
                item.remove();
            });
        }

        document
            .querySelectorAll('ul.contactPhones li')
            .forEach((contactPhone) => {
                addContactPhoneFormDeleteLink(contactPhone)
            })
    </script>

{% endblock %}
